{
  "description": "Hybrid mode: Claude Code + Ollama execution",
  "llm": {
    "provider": "ollama",
    "model": "qwen2.5-mcp",
    "baseUrl": "http://localhost:11434"
  },
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "D:/dev/MADF"],
      "env": {"ALLOWED_DIRECTORIES": "D:/dev/MADF"}
    },
    "github": {
      "command": "npx",
      "args": ["-y", "github-mcp-scoped-server"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_API_KEY}",
        "GITHUB_TARGET_USER": "szmen"
      }
    },
    "tavily": {
      "command": "npx",
      "args": ["-y", "tavily-mcp"],
      "env": {"TAVILY_API_KEY": "${TAVILY_API_KEY}"}
    }
  }
}